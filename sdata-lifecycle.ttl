# =============================================================================
# FILE: sdata-lifecycle.ttl
# Universal lifecycle flow — domain-independent, verb-based
# =============================================================================

@prefix rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:  <http://www.w3.org/2002/07/owl#> .
@prefix xsd:  <http://www.w3.org/2001/XMLSchema#> .

@prefix dcterms: <http://purl.org/dc/terms/> .

@prefix sdata: <https://w3id.org/sdata/core/> .
@prefix slc:   <https://w3id.org/sdata/lifecycle#> .

# =============================================================================
# Ontology header
# =============================================================================

<https://w3id.org/sdata/lifecycle>
    a owl:Ontology ;
    owl:imports <https://w3id.org/sdata/core> ;
    owl:imports <https://w3id.org/sdata/processtypes> ;
    owl:versionInfo "0.2.0 — 27 February 2026" ;
    rdfs:label "sdata Lifecycle flows"@en ;
    rdfs:label "sdata Lebenszyklusflüsse"@de ;
    dcterms:description
        """One universal lifecycle flow that applies identically to material
and information domains. The verbs are domain-independent.
Circular: Creation → Transformation → Transfer → Preservation → Recovery ─╮
               ↑                                                           │
               ╰───────────────────────────────────────────────────────────╯
Cross-cutting: Observation (attaches at any stage)
Terminal exit: Destruction (leaves the cycle)"""@en .

# =============================================================================
# DESIGN DECISIONS
# =============================================================================
#
# D1. ONE UNIVERSAL LIFECYCLE — one flow, two readings:
#   Material:    Creation (mine) → Transformation (stamp) → Transfer (ship) →
#                Preservation (maintain) → Recovery (recycle) → Creation
#   Information: Creation (generate) → Transformation (convert) → Transfer (upload) →
#                Preservation (archive) → Recovery (train model) → Creation
#
# D2. THREE FLOW CATEGORIES:
#   Circular (5):    Main lifecycle loop
#   Cross-cutting (1): Observation — attaches at any stage
#   Terminal (1):    Destruction — exits the cycle permanently
#
# D3. TWO LEVELS OF SEQUENCING:
#   Schema level:   slc:typicallyFollowedBy between verb *classes*
#   Instance level: sdata:precedes / sdata:follows between process *instances*
#
# =============================================================================

# =============================================================================
# Object Properties — schema-level sequencing
# =============================================================================

slc:typicallyFollowedBy
    rdf:type owl:ObjectProperty ;
    rdfs:label "typically followed by"@en , "typischerweise gefolgt von"@de ;
    rdfs:comment """Schema-level relation between process verb classes expressing
canonical lifecycle order. Descriptive, not prescriptive."""@en .

# =============================================================================
# Object Properties — instance-level chaining
# =============================================================================

sdata:precedes
    rdf:type owl:ObjectProperty ;
    rdfs:domain [ owl:unionOf ( sdata:MaterialProcess sdata:InformationProcess ) ] ;
    rdfs:range [ owl:unionOf ( sdata:MaterialProcess sdata:InformationProcess ) ] ;
    rdfs:label "precedes"@en , "geht voraus"@de ;
    rdfs:comment """Instance-level: this process directly precedes another in an
actual execution chain."""@en .

sdata:follows
    rdf:type owl:ObjectProperty ;
    owl:inverseOf sdata:precedes ;
    rdfs:label "follows"@en , "folgt auf"@de .

# =============================================================================
# Object Property — cross-cutting attachment
# =============================================================================

sdata:observes
    rdf:type owl:ObjectProperty ;
    rdfs:domain sdata:Observation ;
    rdfs:range [ owl:unionOf ( sdata:MaterialProcess sdata:InformationProcess ) ] ;
    rdfs:label "observes"@en , "beobachtet"@de ;
    rdfs:comment """Links an Observation process to the lifecycle process it
observes. The Observation does not alter the observed process —
it only extracts information."""@en .

# =============================================================================
# Universal Lifecycle — circular flow
# =============================================================================
#
#   Creation → Transformation → Transfer → Preservation → Recovery ──╮
#       ↑                                                             │
#       ╰─────────────────────────────────────────────────────────────╯
#
#   + Observation (cross-cutting, attaches at any stage)
#   ↘ Destruction (terminal exit from any stage)
#
# =============================================================================

sdata:Creation       slc:typicallyFollowedBy sdata:Transformation .
sdata:Transformation slc:typicallyFollowedBy sdata:Transfer .
sdata:Transfer       slc:typicallyFollowedBy sdata:Preservation .
sdata:Preservation   slc:typicallyFollowedBy sdata:Recovery .
sdata:Recovery       slc:typicallyFollowedBy sdata:Creation .      # circular

# =============================================================================
# Named Lifecycle Individual
# =============================================================================

slc:UniversalLifecycle
    a owl:NamedIndividual ;
    rdfs:label "Universal Lifecycle"@en , "Universeller Lebenszyklus"@de ;
    rdfs:comment """One lifecycle, two readings. The 5 circular verbs apply
identically to material and information entities."""@en ;
    slc:hasStage
        sdata:Creation ,
        sdata:Transformation ,
        sdata:Transfer ,
        sdata:Preservation ,
        sdata:Recovery ;
    slc:crossCutting  sdata:Observation ;
    slc:terminalExit  sdata:Destruction .

slc:hasStage
    rdf:type owl:ObjectProperty ;
    rdfs:label "has stage"@en , "hat Stufe"@de .

slc:crossCutting
    rdf:type owl:ObjectProperty ;
    rdfs:label "cross-cutting"@en , "querschnittlich"@de .

slc:terminalExit
    rdf:type owl:ObjectProperty ;
    rdfs:label "terminal exit"@en , "terminaler Ausgang"@de .

