# =============================================================================
# FILE: sdata-vd-interval.ttl
# ValueDomain extension: IntervalDomain (bounded range with boundary semantics)
# =============================================================================

@prefix rdf:     <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:    <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:     <http://www.w3.org/2002/07/owl#> .
@prefix xsd:     <http://www.w3.org/2001/XMLSchema#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix sdata:   <https://w3id.org/sdata/core/> .

# =============================================================================
# Ontology header
# =============================================================================

<https://w3id.org/sdata/vd-interval>
    a owl:Ontology ;
    owl:imports <https://w3id.org/sdata/quantities> ;
    owl:versionInfo "0.2.0 — 27 February 2026" ;
    rdfs:label "sdata ValueDomain: Interval"@en ,
               "sdata Wertebereich: Intervall"@de ;
    dcterms:description
        """Bounded range with explicit open/closed boundary semantics.
Supports all four interval types: [a,b]  (a,b]  [a,b)  (a,b).
Also serves as truncation bound for statistical and fuzzy domains
via sdata:truncatedBy.

Notation convention (ISO 31-11):
  [a, b]  closed–closed   a ≤ x ≤ b   (default)
  (a, b]  open–closed     a < x ≤ b
  [a, b)  closed–open     a ≤ x < b
  (a, b)  open–open       a < x < b

1 Class · 0 Object Properties · 4 Datatype Properties"""@en .

# =============================================================================
# CLASS
# =============================================================================

sdata:IntervalDomain
    rdf:type       owl:Class ;
    rdfs:subClassOf sdata:ValueDomain ;
    rdfs:subClassOf [
        rdf:type owl:Restriction ;
        owl:onProperty sdata:minValue ;
        owl:cardinality "1"^^xsd:nonNegativeInteger
    ] ;
    rdfs:subClassOf [
        rdf:type owl:Restriction ;
        owl:onProperty sdata:maxValue ;
        owl:cardinality "1"^^xsd:nonNegativeInteger
    ] ;
    rdfs:label     "Interval Domain"@en ,
                   "Intervall-Wertebereich"@de ;
    rdfs:comment   """Bounded range defined by lower and upper bound with explicit
open/closed boundary semantics.

Default: closed interval [min, max] (both inclusive).
Override via sdata:minInclusive and sdata:maxInclusive.

The four interval types:
  [a, b]  — minInclusive=true,  maxInclusive=true   (default)
  (a, b]  — minInclusive=false, maxInclusive=true
  [a, b)  — minInclusive=true,  maxInclusive=false
  (a, b)  — minInclusive=false, maxInclusive=false

Use INF / -INF for unbounded sides:
  [0, +∞)  — non-negative reals
  (-∞, +∞) — all reals (unconstrained, but documented)

Also used as truncation bound for StatisticalDomain and FuzzyDomain
via sdata:truncatedBy."""@en ,
                   """Beschränkter Bereich mit expliziter offen/geschlossen-Semantik
an den Grenzen. Standard: geschlossenes Intervall [min, max]."""@de .

# =============================================================================
# DATATYPE PROPERTIES
# =============================================================================

sdata:minValue
    rdf:type       owl:DatatypeProperty ;
    rdfs:domain    sdata:IntervalDomain ;
    rdfs:range     xsd:double ;
    rdfs:label     "minimum value"@en ,
                   "Minimalwert"@de ;
    rdfs:comment   "Lower bound of the interval."@en .

sdata:maxValue
    rdf:type       owl:DatatypeProperty ;
    rdfs:domain    sdata:IntervalDomain ;
    rdfs:range     xsd:double ;
    rdfs:label     "maximum value"@en ,
                   "Maximalwert"@de ;
    rdfs:comment   "Upper bound of the interval."@en .

sdata:minInclusive
    rdf:type       owl:DatatypeProperty ;
    rdfs:domain    sdata:IntervalDomain ;
    rdfs:range     xsd:boolean ;
    rdfs:label     "min inclusive"@en ,
                   "Min inklusiv"@de ;
    rdfs:comment   """Is the lower bound included in the interval?
  true  → closed: x ≥ min  (bracket notation: [ )
  false → open:   x > min  (bracket notation: ( )
Default if omitted: true (closed)."""@en .

sdata:maxInclusive
    rdf:type       owl:DatatypeProperty ;
    rdfs:domain    sdata:IntervalDomain ;
    rdfs:range     xsd:boolean ;
    rdfs:label     "max inclusive"@en ,
                   "Max inklusiv"@de ;
    rdfs:comment   """Is the upper bound included in the interval?
  true  → closed: x ≤ max  (bracket notation: ] )
  false → open:   x < max  (bracket notation: ) )
Default if omitted: true (closed)."""@en .

# =============================================================================
# USAGE EXAMPLES (informative)
# =============================================================================
#
# ─── [1.1, 1.3] — closed–closed (default) ───────────────
# ex:dom_closed  a  sdata:IntervalDomain ;
#     sdata:minValue          "1.1"^^xsd:double ;
#     sdata:maxValue          "1.3"^^xsd:double ;
#     sdata:domainDescription "t ∈ [1.1, 1.3] mm" .
#
# ─── (1.1, 1.3] — open–closed ───────────────────────────
# ex:dom_open_closed  a  sdata:IntervalDomain ;
#     sdata:minValue          "1.1"^^xsd:double ;
#     sdata:minInclusive      "false"^^xsd:boolean ;
#     sdata:maxValue          "1.3"^^xsd:double ;
#     sdata:domainDescription "t ∈ (1.1, 1.3] mm" .
#
# ─── [1.1, 1.3) — closed–open ───────────────────────────
# ex:dom_closed_open  a  sdata:IntervalDomain ;
#     sdata:minValue          "1.1"^^xsd:double ;
#     sdata:maxValue          "1.3"^^xsd:double ;
#     sdata:maxInclusive      "false"^^xsd:boolean ;
#     sdata:domainDescription "t ∈ [1.1, 1.3) mm" .
#
# ─── (1.1, 1.3) — open–open ─────────────────────────────
# ex:dom_open  a  sdata:IntervalDomain ;
#     sdata:minValue          "1.1"^^xsd:double ;
#     sdata:minInclusive      "false"^^xsd:boolean ;
#     sdata:maxValue          "1.3"^^xsd:double ;
#     sdata:maxInclusive      "false"^^xsd:boolean ;
#     sdata:domainDescription "t ∈ (1.1, 1.3) mm" .
#
# ─── [0, +∞) — non-negative reals ───────────────────────
# ex:dom_non_negative  a  sdata:IntervalDomain ;
#     sdata:minValue          "0.0"^^xsd:double ;
#     sdata:maxValue          "INF"^^xsd:double ;
#     sdata:maxInclusive      "false"^^xsd:boolean ;
#     sdata:domainDescription "x ∈ [0, +∞)" .
#
